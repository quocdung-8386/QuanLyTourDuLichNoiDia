<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RefundCancellationFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Hoàn Tiền/Hủy Thanh Toán"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/notification_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notifications"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_search_bar"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="Tìm mã đơn, tên khách..."
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/filter_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/white"
                android:padding="12dp"
                android:src="@drawable/ic_filter_list"
                app:layout_constraintBottom_toBottomOf="@+id/search_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_bar" />

            <TextView
                android:id="@+id/policy_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_policy_link"
                android:drawableStart="@drawable/ic_assignment_ind"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Kiểm tra chính sách Hoàn hủy"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_bar" />

            <!-- Pending Item -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pending_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/policy_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pending_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Trần Minh Anh"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/pending_status"/>

                    <TextView
                        android:id="@+id/pending_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chờ xử lý"
                        android:textColor="#FBC02D"
                        android:background="@drawable/bg_status_pending_yellow"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/pending_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn: #DT240712A"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/pending_name"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/pending_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Số tiền yêu cầu:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/pending_order_id"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/pending_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.500.000đ"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/pending_amount_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/pending_tour_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/pending_amount_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/pending_tour_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hạ Long 2N1Đ"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/pending_tour_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/pending_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày yêu cầu:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/pending_tour_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/pending_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/07/2024"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/pending_date_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <Button
                        android:id="@+id/reject_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_button_reject"
                        android:text="Từ chối"
                        android:textColor="#2196F3"
                        app:layout_constraintTop_toBottomOf="@+id/pending_date_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/approve_button"/>

                    <Button
                        android:id="@+id/approve_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_button_approve"
                        android:text="Phê duyệt"
                        android:textColor="@android:color/white"
                        app:layout_constraintTop_toTopOf="@+id/reject_button"
                        app:layout_constraintStart_toEndOf="@+id/reject_button"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Refunded Item -->
            <androidx.cardview.widget.CardView
                android:id="@+id/refunded_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pending_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/refunded_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Thị Lan"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/refunded_status"/>

                    <TextView
                        android:id="@+id/refunded_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã hoàn tiền"
                        android:textColor="#4CAF50"
                        android:background="@drawable/bg_status_refunded_green"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn: #DT240710B"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/refunded_name"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Số tiền đã hoàn:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/refunded_order_id"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.250.000đ"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/refunded_amount_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_tour_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/refunded_amount_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_tour_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đà Nẵng - Hội An"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/refunded_tour_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày hoàn tất:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/refunded_tour_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/refunded_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/07/2024"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/refunded_date_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <Button
                        android:id="@+id/refunded_details_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Xem chi tiết"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/refunded_date_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Rejected Item -->
            <androidx.cardview.widget.CardView
                android:id="@+id/rejected_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/refunded_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rejected_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Lê Văn Hùng"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rejected_status"/>

                    <TextView
                        android:id="@+id/rejected_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã từ chối"
                        android:textColor="#F44336"
                        android:background="@drawable/bg_status_rejected_red"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn: #DT240709C"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/rejected_name"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Số tiền yêu cầu:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/rejected_order_id"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.000.000đ"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/rejected_amount_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_tour_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/rejected_amount_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_tour_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phú Quốc 3N2Đ"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/rejected_tour_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày từ chối:"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/rejected_tour_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/rejected_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/07/2024"
                        android:textColor="@android:color/black"
                        app:layout_constraintBaseline_toBaselineOf="@+id/rejected_date_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <Button
                        android:id="@+id/rejected_details_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Xem chi tiết"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/rejected_date_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>