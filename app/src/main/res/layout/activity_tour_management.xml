<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Tour"
        android:textSize="22sp"
        android:textColor="#111827"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle"
        android:layout_above="@+id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Create Tour Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạo Tour mới"
                        android:textSize="18sp"
                        android:textColor="#111827"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kiểm tra thông tin đầy đủ"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kiểm tra Lịch trình trùng lặp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm ảnh và video"
                        android:drawableStart="@drawable/ic_image"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tính Giá vốn Tour"
                        android:drawableStart="@drawable/ic_attach_money"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Áp dụng Tỷ suất lợi nhuận"
                        android:drawableStart="@drawable/ic_trending_up"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="12dp"/>

                    <Button
                        android:id="@+id/btnStartCreating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bắt đầu tạo Tour"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="#345CFF"
                        app:icon="@drawable/ic_add_circle"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_edit"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh sửa Tour"
                            android:layout_marginTop="8dp"
                            android:textColor="#111827"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_assignment_ind"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gán hướng dẫn viên"
                            android:layout_marginTop="8dp"
                            android:textColor="#111827"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thống kê"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_thong_ke"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kinh doanh"
            android:textColor="#2563EB"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_kinh_doanh_active"
            android:drawableTint="#2563EB"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CSKH"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_cskh"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cá nhân"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_ca_nhan"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>
