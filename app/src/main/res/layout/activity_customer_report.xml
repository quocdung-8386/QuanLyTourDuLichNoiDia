<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    tools:context=".CustomerReportActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Báo cáo Khách hàng"
                android:textSize="24sp"
                android:textColor="#111827"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <!-- FILTERS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tuần này"
                    app:icon="@drawable/ic_arrow_drop_down"
                    app:iconGravity="end"
                    android:textColor="#374151"
                    app:strokeColor="#E5E7EB"
                    android:layout_marginEnd="8dp"/>

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại khách"
                    app:icon="@drawable/ic_arrow_drop_down"
                    app:iconGravity="end"
                    android:textColor="#374151"
                    app:strokeColor="#E5E7EB"
                    android:layout_marginEnd="8dp"/>

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nguồn khách"
                    app:icon="@drawable/ic_arrow_drop_down"
                    app:iconGravity="end"
                    android:textColor="#374151"
                    app:strokeColor="#E5E7EB"/>
            </LinearLayout>

            <!-- STATS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng số khách"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,204"
                            android:textSize="24sp"
                            android:textColor="#111827"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khách hàng mới"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="86"
                            android:textSize="24sp"
                            android:textColor="#111827"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khách hàng thân thiết"
                        android:textColor="#6B7280"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="215"
                        android:textSize="24sp"
                        android:textColor="#111827"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

             <!-- CUSTOMER STRUCTURE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cơ cấu khách hàng theo loại"
                        android:textSize="18sp"
                        android:textColor="#111827"
                        android:textStyle="bold"/>

                    <!-- Donut Chart Placeholder -->
                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="65"
                            android:progressDrawable="@drawable/custom_donut_progress"
                            android:rotation="-90" />

                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,204"
                            android:textSize="28sp"
                            android:textColor="#111827"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="khách"
                             android:textColor="#6B7280"
                             android:layout_gravity="center"
                             android:layout_marginTop="24dp"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                             <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="#2563EB"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khách đoàn"
                                android:textColor="#111827"
                                android:layout_marginStart="8dp"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="782 khách (65%)"
                                android:textColor="#6B7280"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                         <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">
                             <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="#D1D5DB"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khách lẻ"
                                android:textColor="#111827"
                                android:layout_marginStart="8dp"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="422 khách (35%)"
                                android:textColor="#6B7280"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TOP NATIONALITIES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top quốc tịch khách hàng"
                        android:textSize="18sp"
                        android:textColor="#111827"
                        android:textStyle="bold"/>

                    <!-- Nationality 1 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Việt Nam"
                            android:textColor="#111827"
                            android:layout_centerVertical="true"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70%"
                            android:textColor="#111827"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="70"
                            android:layout_toStartOf="@android:id/empty"
                            android:layout_toEndOf="@android:id/empty"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="40dp"
                            android:progressDrawable="@drawable/custom_progress_bar"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hàn Quốc"
                            android:textColor="#111827"
                            android:layout_centerVertical="true"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#111827"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="50"
                            android:layout_toStartOf="@android:id/empty"
                            android:layout_toEndOf="@android:id/empty"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="40dp"
                            android:progressDrawable="@drawable/custom_progress_bar"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhật Bản"
                            android:textColor="#111827"
                            android:layout_centerVertical="true"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textColor="#111827"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="45"
                            android:layout_toStartOf="@android:id/empty"
                            android:layout_toEndOf="@android:id/empty"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="40dp"
                            android.progressDrawable="@drawable/custom_progress_bar"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mỹ"
                            android:textColor="#111827"
                            android:layout_centerVertical="true"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%"
                            android:textColor="#111827"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="20"
                            android:layout_toStartOf="@android:id/empty"
                            android:layout_toEndOf="@android:id/empty"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="40dp"
                            android:progressDrawable="@drawable/custom_progress_bar"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CUSTOMER LIST -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách khách hàng"
                        android:textSize="18sp"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xuất file"
                        app:icon="@drawable/ic_file_download"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <!-- Customer Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/tvCustomerName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nông Quốc Dũng"
                            android:textColor="#111827"
                            android:textStyle="bold"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KH001"
                            android:layout_below="@id/tvCustomerName1"
                            android:textColor="#6B7280"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="qd123@email.com"
                            android:layout_centerInParent="true"
                             android:textColor="#111827"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khách đoàn"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_customer_type"
                            android:textColor="#2563EB"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                 <!-- Customer Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/tvCustomerName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trương Văn Long"
                            android:textColor="#111827"
                            android:textStyle="bold"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KH002"
                            android:layout_below="@id/tvCustomerName2"
                            android:textColor="#6B7280"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="long@email.com"
                            android:layout_centerInParent="true"
                             android:textColor="#111827"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khách lẻ"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_customer_type_le"
                            android:textColor="#374151"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                 <!-- Customer Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/tvCustomerName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vũ Hồng Quang"
                            android:textColor="#111827"
                            android:textStyle="bold"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KH003"
                            android:layout_below="@id/tvCustomerName3"
                            android:textColor="#6B7280"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="qdevu@email.com"
                            android:layout_centerInParent="true"
                             android:textColor="#111827"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khách lẻ"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_customer_type_le"
                            android:textColor="#374151"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thống kê"
            android:textColor="#2563EB"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_thong_ke_active"
            android:drawableTint="#2563EB"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kinh doanh"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_kinh_doanh"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CSKH"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_cskh"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cá nhân"
            android:textColor="#6B7280"
            android:drawableTop="@drawable/ic_ca_nhan"
            android:drawableTint="#6B7280"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
