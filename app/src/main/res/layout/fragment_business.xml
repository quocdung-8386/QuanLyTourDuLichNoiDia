<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BusinessFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Kinh doanh"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:tabGravity="fill"
        app:tabIndicatorColor="#2196F3"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#2196F3"
        app:tabTextColor="@android:color/darker_gray">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang mở bán" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hết hạn" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nháp" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Tour 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tour_id_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DICUNGTOI-1123"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_price_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá bán"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_title_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tour Hà Giang - Lũng Cú - Sông Nho Quế"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_id_1" 
                        app:layout_constraintEnd_toStartOf="@+id/tour_price_1"/>

                    <TextView
                        android:id="@+id/tour_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.250.000đ"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_title_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tour_duration_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="3N2Đ"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_title_1" />

                    <TextView
                        android:id="@+id/tour_location_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="Hà Giang"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_duration_1"
                        app:layout_constraintStart_toEndOf="@+id/tour_duration_1" />

                    <TextView
                        android:id="@+id/tour_availability_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_people"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="15/25"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_location_1"
                        app:layout_constraintStart_toEndOf="@+id/tour_location_1" />

                    <TextView
                        android:id="@+id/tour_rating_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="4.8 (125 đánh giá)"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_duration_1" />

                    <View
                        android:id="@+id/divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/tour_rating_1" />

                    <TextView
                        android:id="@+id/tour_status_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_status_on_sale"
                        android:drawableStart="@drawable/ic_status_green"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="Đang mở bán"
                        android:textColor="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider_1" />

                    <Button
                        android:id="@+id/update_button_1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_edit"
                        android:text="Cập nhật"
                        android:textAllCaps="false"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_status_1"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tour 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tour_id_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DICUNGTOI-2456"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_price_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá bán"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Khám phá Đà Lạt - Thành phố ngàn hoa"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_id_2" 
                        app:layout_constraintEnd_toStartOf="@+id/tour_price_2"/>

                    <TextView
                        android:id="@+id/tour_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.800.000đ"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_title_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tour_duration_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="3N2Đ"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_title_2" />

                    <TextView
                        android:id="@+id/tour_location_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="Đà Lạt"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_duration_2"
                        app:layout_constraintStart_toEndOf="@+id/tour_duration_2" />

                    <TextView
                        android:id="@+id/tour_availability_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_people"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="22/30"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_location_2"
                        app:layout_constraintStart_toEndOf="@+id/tour_location_2" />

                    <TextView
                        android:id="@+id/hot_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_hot_label"
                        android:drawableStart="@drawable/ic_whatshot"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="2dp"
                        android:text="HOT"
                        android:textColor="#F44336"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_duration_2" />
                    
                    <View
                        android:id="@+id/divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/hot_label" />

                    <TextView
                        android:id="@+id/tour_status_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_status_on_sale"
                        android:drawableStart="@drawable/ic_status_green"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="Đang mở bán"
                        android:textColor="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider_2" />

                    <Button
                        android:id="@+id/update_button_2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_edit"
                        android:text="Cập nhật"
                        android:textAllCaps="false"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_status_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tour 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tour_id_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DICUNGTOI-3891"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_price_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá bán"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tour_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tour du lịch Vịnh Hạ Long 2 ngày 1 đêm"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_id_3" 
                        app:layout_constraintEnd_toStartOf="@+id/tour_price_3"/>

                    <TextView
                        android:id="@+id/tour_price_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.500.000đ"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_title_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tour_duration_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="2N1Đ"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_title_3" />

                    <TextView
                        android:id="@+id/tour_location_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="Hạ Long"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_duration_3"
                        app:layout_constraintStart_toEndOf="@+id/tour_duration_3" />

                    <TextView
                        android:id="@+id/tour_availability_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_people"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="18/20"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_location_3"
                        app:layout_constraintStart_toEndOf="@+id/tour_location_3" />

                    <TextView
                        android:id="@+id/tour_rating_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="4.5 (98 đánh giá)"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tour_duration_3" />

                    <View
                        android:id="@+id/divider_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/tour_rating_3" />

                    <TextView
                        android:id="@+id/tour_status_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_status_on_sale"
                        android:drawableStart="@drawable/ic_status_green"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="Đang mở bán"
                        android:textColor="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider_3" />

                    <Button
                        android:id="@+id/update_button_3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_edit"
                        android:text="Cập nhật"
                        android:textAllCaps="false"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tour_status_3"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemBackground="@drawable/bg_bottom_nav_item"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>